---
import TagBadge from './TagBadge.astro';

interface Props {
  title: string;
  date: Date;
  type: 'essay' | 'note';
  tags: string[];
  description: string;
  slug: string;
}

const { title, date, type, tags, description, slug } = Astro.props;
---

<article class="group">
  <a href={`/writing/${slug}`} class="post-card block p-4 rounded-lg border border-border bg-surface-raised transition-all duration-200 active:scale-[0.98] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-focus">
    <div class="flex items-center gap-3 text-sm text-text-muted mb-2">
      <time datetime={date.toISOString()}>
        {date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
      </time>
      <span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-accent-light text-accent-text">
        {type}
      </span>
    </div>
    <h3 class="text-lg font-semibold text-text-primary group-hover:text-accent transition-colors mb-2">
      {title}
    </h3>
    <p class="text-text-body text-sm line-clamp-2 mb-3">
      {description}
    </p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => <TagBadge tag={tag} />)}
      </div>
    )}
  </a>
</article>

<style>
  @media (hover: hover) {
    .post-card:hover {
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      transform: translateY(-2px);
    }
  }
</style>
