---
import type { GitHubStats } from '../lib/github';

interface Props {
  stats: GitHubStats | null;
}

const { stats } = Astro.props;
---

{stats && (
  <div class="p-6 bg-surface-raised border border-border rounded-lg">
    <h3 class="text-lg font-semibold text-text-primary mb-4">GitHub Activity</h3>

    <div class="mb-4">
      <p class="text-sm text-text-muted mb-1">Contributions this year</p>
      <p class="text-2xl font-bold text-text-primary">{stats.contributionsThisYear.toLocaleString()}</p>
    </div>

    {stats.topLanguages.length > 0 && (
      <div>
        <p class="text-sm text-text-muted mb-2">Top languages</p>
        <div class="space-y-2">
          {stats.topLanguages.map(lang => (
            <div class="flex items-center gap-3">
              <span class="text-sm text-text-body w-24">{lang.name}</span>
              <div class="flex-1 bg-surface-muted rounded-full h-2 overflow-hidden">
                <div
                  class="bg-accent h-full rounded-full"
                  style={`width: ${lang.percentage}%`}
                />
              </div>
              <span class="text-sm text-text-muted w-12 text-right">{lang.percentage}%</span>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
)}
