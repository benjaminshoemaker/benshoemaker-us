---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { siteConfig } from '../data/site';

const services = [
  {
    title: 'AI Development & Tooling',
    description: 'AI coding workflow design — setting up teams to use Claude Code, Cursor, and Codex effectively. Specification design, prompt engineering, and agent orchestration. Rapid prototyping — idea to working product in days, not months.',
  },
  {
    title: 'Data & Analytics',
    description: "Analytics strategy and measurement frameworks — I built Indeed's company-wide success metrics used in board meetings and 1,000+ A/B experiments per year. Data organization design — scaled a 2-person team to 70+ as the analytics hub for Indeed's Employer business. Platform guidance on event pipelines, warehousing, governance, and data contracts.",
  },
  {
    title: 'Product Leadership',
    description: 'Fractional and advisory product leadership for startups. 0→1 product development from vision through launch. Build-vs-buy decisions, roadmapping, and prioritization.',
  },
  {
    title: 'Hands-On Building',
    description: "I don't just advise — I build. Full-stack development for MVPs, prototypes, and internal tools. Currently building a PropTech platform as technical co-founder (Astro/React, Supabase, AI-powered insights).",
  },
];
---

<BaseLayout title="Services" description="Consulting, advising, and hands-on building for startups and enterprises.">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <h1 class="text-3xl font-bold text-text-primary mb-4">Services</h1>
      <p class="text-lg text-text-muted max-w-prose">
        Consulting, advising, and hands-on building for startups and enterprises.
      </p>
    </header>

    <section class="mb-12">
      <h2 class="text-xl font-semibold text-text-primary mb-6">What I Offer</h2>
      <div class="grid grid-cols-1 gap-6">
        {services.map(service => (
          <ServiceCard title={service.title} description={service.description} />
        ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-xl font-semibold text-text-primary mb-4">Why Work With Me</h2>
      <div class="prose prose-stone max-w-prose">
        <p class="text-text-body">
          I've spent 12 years in product leadership at Indeed — creating metrics used in the boardroom, scaling orgs to 70+ people, running 1,000+ A/B experiments per year. I know how enterprises work.
        </p>
        <p class="text-text-body mt-4">
          I've also built AI-powered products that people actually use — VibeScaffold has 4,000+ users. I've been featured in AI Tinkerers Community Spotlights. I work at the intersection of product intuition and technical depth.
        </p>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-xl font-semibold text-text-primary mb-4">Who I Work With</h2>
      <ul class="space-y-3 text-text-body">
        <li class="flex items-start gap-2">
          <span class="text-text-muted mt-1 shrink-0">&mdash;</span>
          Startups building AI-native products or needing senior product thinking
        </li>
        <li class="flex items-start gap-2">
          <span class="text-text-muted mt-1 shrink-0">&mdash;</span>
          Enterprises adopting AI development tools or modernizing data infrastructure
        </li>
        <li class="flex items-start gap-2">
          <span class="text-text-muted mt-1 shrink-0">&mdash;</span>
          Founders who want to validate ideas fast before scaling engineering
        </li>
      </ul>
    </section>

    <section class="pt-8">
      <div class="rounded-2xl bg-accent-light border border-accent/20 p-6 sm:p-8">
        <h2 class="text-xl font-semibold text-text-primary mb-4">Get in Touch</h2>
        <p class="text-text-body mb-6">
          I'm building my own ventures and selectively taking on consulting and advisory work. Open to the right opportunity — full-time, fractional, or partnership — with teams doing interesting work in AI, data, or dev tooling.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href={`mailto:${siteConfig.author.email}`}
            class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-focus"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
              <polyline points="22,6 12,13 2,6" />
            </svg>
            Send an Email
          </a>
          <a
            href={siteConfig.author.calendarUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-border text-text-primary font-medium rounded-lg hover:bg-surface-raised transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-focus"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
              <line x1="16" y1="2" x2="16" y2="6" />
              <line x1="8" y1="2" x2="8" y2="6" />
              <line x1="3" y1="10" x2="21" y2="10" />
            </svg>
            Book a Call
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
